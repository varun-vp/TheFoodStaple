@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    var roles = (List<IdentityRole>)ViewData["roles"];
}
@section head{
    <style type="text/css">
        body {
            background: /*linear-gradient(rgba(0,0,150,0.5), rgba(0,0,50,0.5)),*/ url('/Images/lotus.jpg');
            background-size: auto;
            margin: 0;
        }
    </style>
}

<div id="regbody">

    <div class="box" style="background-color:none">
        <h4 style="color:yellow; text-align:center;">Register</h4>
        <div class="imgcontainer" style="text-align:center;">

            <img id="imgtwo" src="~/images/avatar.png" />
        </div>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <br />
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger">@TempData["emailExisted"]</span>
            </div>

            <div class="form-group">

                <input asp-for="Input.Password" class="form-control" placeholder="Password"  />
                <span asp-validation-for="Input.Password" class="text-danger">@TempData["passwordStrength"]</span>
            </div>

            <div class="form-group">

                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="confirm password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
              
                <select asp-for="Input.Role" class="form-control" asp-items="@(new SelectList(roles,"Id","Name"))"><option>Please select one</option></select>
                <span asp-validation-for="Input.Role" class="text-danger">@TempData["roleEmpty"]</span>
            </div>
            
            <button type="submit" class="btn" >Register</button>
        
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
