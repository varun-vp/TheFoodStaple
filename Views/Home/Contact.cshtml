

@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
<html lang="en">

<h1>Contact Us</h1>
<head>
    <title></title>

</head>
<body>


    <section>
        <div class="container">
            <div class="col-md-offset-2 col-md-8 sign-up-block input-green">
                <form class="form-horizontal detail-loginview" id="frmcontact" method="post" novalidate>





                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" placeholder="Name of the contact Person*" name="contactName" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="number" class="form-control" placeholder="Mobile No*" name="mobileNo" minlength="10" min="0" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="email" class="form-control" placeholder="Email Id*" name="emailId" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" placeholder="Location/City*" name="location" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" placeholder="Pin Code*" name="pinCode" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" placeholder="Please Share Your Requirements*" name="pinCode" required>
                        </div>
                    </div>
                    <div>
                        <div class="col-md-12 col-sm-12 radio-section">
                            <h2>Preferred Mode of Communication</h2>
                            <div class="preferred-mode">
                                <div class="col-md-4 col-sm-4 col-xs-4">
                                    <label class="switch">
                                        <input value="Email" type="checkbox" >
                                        <span class="slider round"></span>
                                    </label>
                                    <p>Email</p>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-4">
                                    <label class="switch">
                                        <input value="Call" type="checkbox" name="communication_way[]">
                                        <span class="slider round"></span>
                                    </label>
                                    <p>Call</p>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-4">
                                    <label class="switch">
                                        <input value="Meeting" type="checkbox" name="communication_way[]">
                                        <span class="slider round"></span>
                                    </label>
                                    <p>Meeting</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12 col-xs-12 heading-style">
                            <span>Thank you for registration with TheFoodStaple. We will get back to you within 2 working days.</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <center><button type="submit" class="btn btn-default">SUBMIT</button></center>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

    @*<section class="maps bottom-margin">

        <iframe src="https://snazzymaps.com/embed/17459" width="100%" height="600px" style="border:none;"></iframe>
    </section>*@

</body>

</html>
